{% extends 'base.html.twig' %}

{% block title %}Ajouter un Joueur{% endblock %}

{% block body %}
    <div class="form-container">
        <h1 class="form-title">Ajouter un Nouveau Joueur</h1>

        {{ form_start(form, {'attr': {'class': 'add-player-form'}}) }}

        <div class="form-group">
            {{ form_label(form.FullName, 'Nom Complet') }}
            {{ form_widget(form.FullName, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.FullName) }}
        </div>

        <div class="form-group">
            {{ form_label(form.birthday, 'Date de Naissance') }}
            {{ form_widget(form.birthday, {'attr': {'class': 'form-control', 'placeholder': 'YYYY-MM-DD'}}) }}
            {{ form_errors(form.birthday) }}
        </div>

        <div class="form-group">
            {{ form_label(form.DateOfBirth, 'Date de Naissance (bis)') }}
            {{ form_widget(form.DateOfBirth, {'attr': {'class': 'form-control', 'placeholder': 'YYYY-MM-DD'}}) }}
            {{ form_errors(form.DateOfBirth) }}
        </div>

        <div class="form-group">
            {{ form_label(form.position, 'Poste') }}
            {{ form_widget(form.position, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.position) }}
        </div>

        <div class="form-group">
            {{ form_label(form.Name, 'Nom d\'Affichage') }}
            {{ form_widget(form.Name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.Name) }}
        </div>

        <div class="form-group">
            {{ form_label(form.Nationality, 'Nationalité') }}
            {{ form_widget(form.Nationality, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.Nationality) }}
        </div>

        <div class="form-group">
            {{ form_label(form.ApiId, 'ID API') }}
            {{ form_widget(form.ApiId, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.ApiId) }}
        </div>

        <div class="form-group">
            {{ form_label(form.number, 'Numéro') }}
            {{ form_widget(form.number, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.number) }}
        </div>

        {% if form.team is defined %}
            <div class="form-group">
                {{ form_label(form.team, 'Équipe') }}
                {{ form_widget(form.team, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.team) }}
            </div>
        {% endif %}

        <div class="form-group">
            <button type="submit" class="btn-submit">Ajouter le Joueur</button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}

