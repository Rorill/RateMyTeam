{% extends 'base.html.twig' %}

{% block body %}
    <div class="edit-player-container">
        <h1 class="page-title">Édition du Joueur</h1>
        <h2>{{ player.firstName }} {{ player.lastName }}</h2>
        <form method="post" class="edit-player-form">
            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.firstName, 'Prénom') }}
                {{ form_widget(form.firstName, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                {{ form_label(form.lastName, 'Nom') }}
                {{ form_widget(form.lastName, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                {{ form_label(form.position, 'Poste') }}
                {{ form_widget(form.position, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group">
                {{ form_label(form.birthday, 'Date de naissance') }}
                {{ form_widget(form.birthday, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">Enregistrer</button>
                <a href="{{ path('admin_team_players', { id: player.Team.id }) }}" class="btn-cancel">Annuler</a>
            </div>

            {{ form_end(form) }}
        </form>
    </div>
{% endblock %}