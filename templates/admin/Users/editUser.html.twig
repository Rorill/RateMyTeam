{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <h1>Edit User</h1>

    <form method="POST">
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="{{ user.email }}" required>
        </div>

        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Enter a new password (leave blank to keep the current one)">
        </div>

        <div>
            <label for="team">Team:</label>
            <select id="team" name="team" required>
                <option value="" {% if user.selectedTeam is null %}selected{% endif %}>Aucune équipe sélectionnée</option>
                {% for team in teams %}
                    <option value="{{ team.id }}" {% if user.selectedTeam is not null and team.id == user.selectedTeam.id %}selected{% endif %}>
                        {{ team.displayName }}
                    </option>
                {% endfor %}
            </select>
        </div>

        <button type="submit">Save Changes</button>
    </form>

    <a href="{{ path('admin_users') }}">Back to user list</a>
{% endblock %}

