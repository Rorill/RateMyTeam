{% extends 'base.html.twig' %}

{% block title %}Main Page{% endblock %}

{% block body %}
    <div class="main-page-container">
        <h1 class="team-header">{{ selectedTeam.name }} - Games Overview</h1>

        <div class="last-game-section">
            <h2>Last Game</h2>
            {% if lastGame %}
                <div class="game-details">
                    <p><strong>Date:</strong> {{ lastGame.date | date("d/m/Y") }}</p>
                    <p><strong>Opponent:</strong> {{ lastGame.opponent }}</p>
                    <p><strong>Score:</strong> {{ lastGame.score }}</p>
                </div>
            {% else %}
                <p>No recent games available.</p>
            {% endif %}
        </div>

        <div class="next-games-section">
            <h2>Next 5 Games</h2>
            {% if nextGames|length > 0 %}
                <ul class="next-games-list">
                    {% for game in nextGames %}
                        <li class="game-item">
                            <p><strong>Date:</strong> {{ game.date | date("d/m/Y") }}</p>
                            <p><strong>Opponent:</strong> {{ game.opponent }}</p>
                            <p><strong>Venue:</strong> {{ game.venue }}</p>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>No upcoming games available.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}