{# templates/rating/rate_players.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rate Players for the Game {{ game.teamHome.name }} vs. {{ game.teamAway.name }}</h1>

    {% for form in playerRatings %}
        <div class="player-rating-form">
            <h2>{{ form.player.name }}</h2>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit">Submit Rating</button>
            {{ form_end(form) }}
        </div>
    {% endfor %}
{% endblock %}