{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="registration-form-container">
        <h1 class="registration-header">Créer un nouveau compte</h1>

        {{ form_start(registrationForm, {'attr': {'class': 'registration-form'}}) }}

        <!-- Champ Email -->
        <div class="form-group email-group">
            {{ form_label(registrationForm.email, 'Adresse Email', {'label_attr': {'class': 'form-label registration-label'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-input registration-input'}}) }}
            {{ form_errors(registrationForm.email, {'attr': {'class': 'form-message registration-message'}}) }}
        </div>

        <!-- Champ Mot de passe -->
        <div class="form-group password-group">
            {{ form_label(registrationForm.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'form-label registration-label'}}) }}
            {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-input registration-input'}}) }}
            {{ form_errors(registrationForm.plainPassword.first, {'attr': {'class': 'form-message registration-message'}}) }}
        </div>

        <div class="form-group confirm-password-group">
            {{ form_label(registrationForm.plainPassword.second, 'Répétez le mot de passe', {'label_attr': {'class': 'form-label registration-label'}}) }}
            {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-input registration-input'}}) }}
            {{ form_errors(registrationForm.plainPassword.second, {'attr': {'class': 'form-message registration-message'}}) }}
        </div>

        <!-- Champ Équipe Sélectionnée -->
        <div class="form-group team-group">
            {{ form_label(registrationForm.selectedTeam, 'Sélectionnez votre équipe', {'label_attr': {'class': 'form-label registration-label'}}) }}
            {{ form_widget(registrationForm.selectedTeam, {'attr': {'class': 'form-select registration-select'}}) }}
            {{ form_errors(registrationForm.selectedTeam, {'attr': {'class': 'form-message registration-message'}}) }}
        </div>

        <!-- Bouton de Soumission -->
        <button type="submit" class="btn registration-submit-btn">S'inscrire</button>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
