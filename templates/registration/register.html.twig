{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>Créer un nouveau compte</h1>

        {{ form_start(registrationForm) }}
        <div class="form-group">
            {{ form_label(registrationForm.email, 'Adresse Email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-input'}}) }}
            {{ form_errors(registrationForm.email, {'attr': {'class': 'form-message'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-input'}}) }}
            {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'form-message'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(registrationForm.selectedTeam, 'Sélectionnez votre équipe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.selectedTeam, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(registrationForm.selectedTeam, {'attr': {'class': 'form-message'}}) }}
        </div>

        <button type="submit" class="btn">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}