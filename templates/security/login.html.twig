{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post" class="custom-form-style">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connexion </h1>
        <label class="loginFormInput" for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label class="loginFormInput" for="inputPassword">Mot de passe </label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√© ?</a>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        <div class="checkbox mb-3">
                <input  type="checkbox" name="_remember_me">
            </label>
            <label class="rememberMeLogin" for="_remmber_me" > Se rappeller de moi  </label>



        </div>

        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>

        <a href="{{ path('app_register') }}"> Pas encore membre ? Rejoignez Nous </a>

    </form>
{% endblock %}
